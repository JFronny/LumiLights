{
    programs: [
         {
            name: "reflection",
            vertexSource: "lumi:shaders/post/reflection.vert",
            fragmentSource: "lumi:shaders/post/reflection.frag",
            samplers: [
                "u_source_color",
                "u_source_combine",
                "u_source_albedo",
                "u_source_depth",
                "u_light_source",
                "u_normal_source",
                "u_normal_micro_source",
                "u_material_source",

                "u_target_color",
                "u_target_combine",
                "u_target_depth",
                "u_normal_target",
                
                "u_blue_noise",
            ]
        }, 
        {
            name: "reflection_halfmerge",
            vertexSource: "lumi:shaders/post/reflection_halfmerge.vert",
            fragmentSource: "lumi:shaders/post/reflection_halfmerge.frag",
            samplers: [
                "u_input",
                "u_depth",
            ]
        },
        {
            name: "reflection_halfcopy_tr",
            vertexSource: "lumi:shaders/post/reflection_halfcopy_tr.vert",
            fragmentSource: "lumi:shaders/post/reflection_halfcopy.frag",
            samplers: [
                "u_input",
            ]
        }, 
        {
            name: "reflection_halfcopy_br",
            vertexSource: "lumi:shaders/post/reflection_halfcopy_br.vert",
            fragmentSource: "lumi:shaders/post/reflection_halfcopy.frag",
            samplers: [
                "u_input",
            ]
        }, 
    ],

    images: [
        {
            name: "solid_shaded_swap",
            lod: 0,
            // higher precision reduces/eliminates banding
            internalFormat: "RGBA16",
            pixelFormat: "RGBA",
            pixelDataType: "UNSIGNED_BYTE",
            target: "TEXTURE_2D",
            texParams: [
                {name: "TEXTURE_MIN_FILTER", val: "LINEAR"}, {name: "TEXTURE_MAG_FILTER", val: "LINEAR"},
                {name: "TEXTURE_WRAP_S", val: "CLAMP_TO_EDGE"}, {name: "TEXTURE_WRAP_T", val: "CLAMP_TO_EDGE"}
            ]
        }, {
            name: "translucent_shaded_swap",
            lod: 0,
            // higher precision reduces/eliminates banding
            internalFormat: "RGBA16",
            pixelFormat: "RGBA",
            pixelDataType: "UNSIGNED_BYTE",
            target: "TEXTURE_2D",
            texParams: [
                {name: "TEXTURE_MIN_FILTER", val: "LINEAR"}, {name: "TEXTURE_MAG_FILTER", val: "LINEAR"},
                {name: "TEXTURE_WRAP_S", val: "CLAMP_TO_EDGE"}, {name: "TEXTURE_WRAP_T", val: "CLAMP_TO_EDGE"}
            ]
        },
    ],
    
    framebuffers: [
        {
            name: "reflection_solid",
            colorAttachments: [
                {image: "solid_shaded_swap", clearColor: 0x00000000}
            ]
        }, {
            name: "reflection_translucent",
            colorAttachments: [
                {image: "translucent_shaded_swap", clearColor: 0x00000000}
            ]
        },
    ]
}
